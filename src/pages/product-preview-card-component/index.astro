---
import Layout from "../../layouts/Layout.astro";
import "./style.css";

import productImgDestop from "./images/image-product-desktop.jpg";
import productImgMobile from "./images/image-product-mobile.jpg";
---

<Layout title="Frontend Mentor | Product preview card component">
  <body>
    <div class="container">
      <article class="product">
        <picture class="product__img">
          <source srcset={productImgDestop.src} />
          <img src={productImgMobile.src} alt="image-product-mobile" />
        </picture>

        <div class="product__content">
          <p class="product__category">Perfume</p>
          <h2 class="product__title">Gabrielle Essence Eau De Parfum</h2>

          <p class="product__text">
            A floral, solar and voluptuous interpretation composed by Olivier
            Polge, Perfumer-Creator for the House of CHANEL.
          </p>

          <div class="product__prices">
            <span class="product__price"> $149.99 </span>
            <span class="product__price--old"> $169.99 </span>
          </div>

          <button class="button">Add to Cart</button>
        </div>
      </article>

      <div class="attribution">
        Challenge by
        <a href="https://www.frontendmentor.io?ref=challenge" target="_blank"
          >Frontend Mentor</a
        >. Coded by <a href="https://github.com/GalvanSierra">Galvan Sierra</a>.
      </div>
    </div>
  </body>
</Layout>
